<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppButton" parent="AppText_Regular">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/app_btn_bg</item>
    </style>

    <style name="AppButton_Accent" parent="AppText_Regular">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="AppText_Regular" parent="AppTheme">
        <item name="android:textColor">@color/app_dark_gray</item>
        <item name="fontFamily">@font/noto_kufi_arabic_regular</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AppText_Accent_Regular" parent="AppText_Regular">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppText_Bold" parent="AppTheme">
        <item name="android:textColor">@color/app_dark_gray</item>
        <item name="fontFamily">@font/noto_kufi_arabic_bold</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AppText_Medium" parent="AppTheme">
        <item name="android:textColor">@color/app_dark_gray</item>
        <item name="fontFamily">@font/noto_kufi_arabic_regular</item>
        <item name="android:textSize">@dimen/text_16sp</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/dubai_regular</item>
        <item name="android:textSize">13sp</item>
    </style>

</resources>
